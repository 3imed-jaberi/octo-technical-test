{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb",
		"prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error", // "off/error/warn"
        "import/no-extraneous-dependencies": "off",
        "import/prefer-default-export": "off",
        "no-console": "error",
        "react/jsx-props-no-spreading": "off"
        // "no-unused-vars": "warn" 
    }
}
